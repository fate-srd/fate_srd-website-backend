{
    "name": "contentacms/contenta-jsonapi-project",
    "description": "Project template for Contenta CMS.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Mateu Aguil√≥ Bosch",
            "email": "mateu.aguilo.bosch@gmail.com"
        },
        {
            "name": "Daniel Wehner",
            "email": "dawehner@users.noreply.github.com"
        }
    ],
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "drupal/core-composer-scaffold": "11.2.5",
        "drupal/core-project-message": "11.2.5",
        "drupal/pathauto": "^1.8",
        "vlucas/phpdotenv": "^5.4",
        "cweagans/composer-patches": "^1.7",
        "drupal/menu_pager": "^3.0",
        "drupal/pathologic": "^2.0@alpha",
        "drupal/jsonapi_views": "^1.0",
        "drupal/menu_normalizer": "^2.1",
        "drupal/typed_data": "^2.1",
        "drupal/views_bulk_edit": "^3.0",
        "drupal/backup_migrate": "^5.0",
        "composer/installers": "^2.0",
        "webflo/drupal-finder": "^1.2",
        "webmozart/path-util": "^2.3",
        "drupal/simple_oauth": "^6.0",
        "league/commonmark": "^2",
        "drupal/consumer_image_styles": "^4.0",
        "drupal/decoupled_router": "^2.0",
        "drupal/metatag": "^2.2",
        "drupal/openapi_jsonapi": "^3.0",
        "drupal/subrequests": "^3.0",
        "drupal/views_bulk_operations": "^4.1",
        "drupal/environment_indicator": "^4.0",
        "drupal/admin_toolbar": "^3.1",
        "drupal/next": "^2.0",
        "drupal/graphql": "^4.3",
        "drupal/inline_entity_form": "^3.0@RC",
        "drupal/jsonapi_menu_items": "^1.2",
        "drupal/linkit": "^7.0",
        "drupal/metatag_ai": "^1.0",
        "drupal/migrate_plus": "^6.0",
        "drupal/migrate_tools": "^6.1",
        "drupal/openapi_ui": "^1.0@RC",
        "drupal/openapi_ui_redoc": "^1.0@RC",
        "drupal/single_content_sync": "^1.4",
        "consolidation/site-alias": "^4",
        "drupal/core-recommended": "11.2.5",
        "drush/drush": "^13",
        "drupal/gin": "^5.0",
        "drupal/gin_toolbar": "^3.0",
        "drupal/gin_login": "^2.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "install:with-mysql": "scripts/install-mysql.sh",
        "install:with-sqlite": "scripts/install-sqlite.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "omit-defaults": false
        },
        "enable-patching": true,
        "patches": {
            "drupal/jsonapi": {
                "Fix menu problems": "https://www.drupal.org/files/issues/2020-05-13/2915792-47.patch",
                "Fix menu problems more": "https://www.drupal.org/files/issues/2020-05-19/3066751-32-with_issue_2915792.patch"
            },
            "drupal/menu_normalizer": {
                "Fix menu problems": "https://www.drupal.org/files/issues/2025-03-28/3495440-normalizer-support.patch"
            }
        }
    },
    "config": {
        "preferred-install": {
            "*": "auto"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "cweagans/composer-patches": true,
            "composer/installers": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "platform": {
            "php": "8.3.25"
        }
    },
    "require-dev": {
        "drupal/core-dev": "^11"
    }
}
